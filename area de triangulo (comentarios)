#include "stdafx.h"  //libreria
#include <iostream>  //libreria
#include "conio.h"  //libreria

//declara monitor y el teclado
using namespace std;

//cuerpo principal
void main() 
{
	int A,B,C; //declaracion de variables
	cout <<"ingrese la base: ";  //mensaje al usuario
	cin >>A;					//ingresar valores
	cout <<"ingrese la altura: ";  //mensaje al usuario
	cin >>B;					//ingresar valores
	C=(A*B)/2;					//resultado
	cout <<"el resultado es: "<<C<<endl;  //mensaje al usuario
	getch();  //detiene pantalla

}
//finaliza programa
